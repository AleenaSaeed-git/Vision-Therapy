<ExerciseScreen>:
    FloatLayout:
        canvas:
            Color:
                rgb: get_color_from_hex("000000")
            Rectangle:
                size: self.size
                pos: self.pos
        GridLayout:
            rows:1
            # --- Exercise Image ---
            Image:
                source: root.exercise_image
                size_hint_y: 0.5
                allow_stretch: True
                keep_ratio: True
        GridLayout:
            rows: 1
            # --- Timer Label ---
            Label:
                id: timer_label
                text: "Time: 03:00"
                font_size: 24
                size_hint_y: None
                height: 50
                color: 1, 1, 1, 1  # White Text for contrast

            # --- Progress Bar ---
            ProgressBar:
                id: progress_bar
                max: 100
                value: 100
                size_hint_y: None
                height: 20
        GridLayout:
            #add 3 menu buttons
            rows: 1
            pos_hint: {"top": .2, "left": 1}
            size_hint: 1, .2
            Button:
                id: start_button
                background_normal: "icons/play.png"
                on_press: root.start_exercise()
            Button:
                id: book_button
                background_normal: "icons/book.png"
                on_press: root.show_instructions(root.instruction_image)
            Button:
                id: back_button
                background_normal: "icons/back.png"
                on_press: root.go_back()


